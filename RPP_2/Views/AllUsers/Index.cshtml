
@using RPP_2.Infrastructure

@{
    ViewBag.Title = "Index";
}

@using RPP_2.Infrastructure

@helper ListOfUsersInternalMethod(List<RPP_2.Models.User> list_of_users)
{
    
    <tbody>

        @for (int i = 0; i < list_of_users.Count; i++)
        {
            <tr>
                <td>@list_of_users[i].id</td>
                <td>@list_of_users[i].name</td>
                <td>@list_of_users[i].last_name</td>
                <td>@list_of_users[i].country</td>
                <td>@list_of_users[i].phone_number</td>
                <td>@list_of_users[i].date_birth</td>
            </tr>
        }  
        
    </tbody>  
    
}

<h2>All users</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Last Name</th>
            <th>County</th>
            <th>Phone number</th>
            <th>Date birth</th>
        </tr>
    </thead>

    @if (Convert.ToBoolean(TempData["method"]) == true)
    {
        <tbody>
            @ListOfUsersInternalMethod(RPP_2.Models.Database.list_users)
        </tbody>

    }
    else 
    {
        @Html.ListOfUsersExternalMethod(RPP_2.Models.Database.list_users)
    }

</table>